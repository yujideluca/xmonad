Config {

   -- appearance
     font =         "xft:Ubuntu Mono:size=10:bold:antialias=true"
   , bgColor =      "#404B59"
   , fgColor =      "white"
   , position =     Top
   , border =       BottomB
   , borderColor =  "#7F6D89"

   -- layout
   , sepChar =  "%"   -- delineator between plugin names and straight text
   , alignSep = "}{"  -- separator between left-right alignment
   , template = "%battery%| %multicpu%| %coretemp%| %memory%| %dynnetwork%| %wlp2s0wi%| %myvolume%|}{ %UnsafeStdinReader% | %date%"

   -- general behavior
   , lowerOnStart =     True    -- send to bottom of window stack on start
   , hideOnStart =      False   -- start with window unmapped (hidden)
   , allDesktops =      True    -- show on all desktops
   , overrideRedirect = True    -- set the Override Redirect flag (Xlib)
   , pickBroadest =     False   -- choose widest display (multi-monitor)
   , persistent =       True    -- enable/disable hiding (True = disabled)

   -- plugins
   --   Numbers can be automatically colored according to their value. xmobar
   --   decides color based on a three-tier/two-cutoff system, controlled by
   --   command options:
   --     --Low sets the low cutoff
   --     --High sets the high cutoff
   --
   --     --low sets the color below --Low cutoff
   --     --normal sets the color between --Low and --High cutoffs
   --     --High sets the color above --High cutoff
   --
   --   The --template option controls how the plugin is displayed. Text
   --   color can be set by enclosing in <fc></fc> tags. For more details
   --   see http://projects.haskell.org/xmobar/#system-monitor-plugins.
   , commands =

        -- network activity monitor (dynamic interface resolution)
        [
        Run DynNetwork     [ "--template" , "<dev>: <tx>kB/s|<rx>kB/s"
                             , "--Low"      , "1000"       -- units: B/s
                             , "--High"     , "5000"       -- units: B/s
                             , "--low"      , "#07DB9C"
                             , "--normal"   , "#049CCF"
                             , "--high"     , "#CF20E8"
                             ] 10

        -- cpu activity monitor
        , Run MultiCpu       [ "--template" , "CPU:<total0>% |<total1>%"
                             , "--Low"      , "50"         -- units: %
                             , "--High"     , "85"         -- units: %
                             , "--low"      , "#07DB9C"
                             , "--normal"   , "#049CCF"
                             , "--high"     , "#CF20E8"
                             ] 10

        -- cpu core temperature monitor
        , Run CoreTemp       [ "--template" , "CoreTemp:<core0>째C|<core1>째C"
                             , "--Low"      , "70"        -- units: 째C
                             , "--High"     , "80"        -- units: 째C
                             , "--low"      , "#07DB9C"
                             , "--normal"   , "#049CCF"
                             , "--high"     , "#CF20E8"
                             ] 50

        -- memory usage monitor
        , Run Memory         [ "--template" ,"Mem:<usedratio>%"
                             , "--Low"      , "20"        -- units: %
                             , "--High"     , "90"        -- units: %
                             , "--low"      , "#07DB9C"
                             , "--normal"   , "#049CCF"
                             , "--high"     , "#CF20E8"
                             ] 10

        -- battery monitor
        , Run Battery        [ "--template" , "Bat:<acstatus>"
                             , "--Low"      , "10"        -- units: %
                             , "--High"     , "80"        -- units: %
                             , "--low"      , "#CF20E8"
                             , "--normal"   , "#049CCF"
                             , "--high"     , "#07DB9C"

                             , "--" -- battery specific options
                                       -- discharging status
                                       , "-o"	, "<left>% (<timeleft>)"
                                       -- AC "on" status
                                       , "-O"	, "<fc=#049CCF>Charging</fc> (<left>%)"
                                       -- charged status
                                       , "-i"	, "<fc=#07DB9C>Charged</fc>"
                             ] 50
        --volume level (~/.xmonad/get-volume.sh)
        , Run Com "/bin/bash" ["-c", "bash ~/.xmonad/get-volume.sh"]  "myvolume" 10
        --wireless connection
        , Run Wireless "wlp2s0" [ "-t", "WIFI:<essid>" ] 10
        -- time and date indicator
        --   (%F = y-m-d date, %a = day of week, %T = h:m:s time)
        , Run Date           "<fc=white>%F(%a) %T</fc>" "date" 10
        , Run UnsafeStdinReader
        ]
   }
